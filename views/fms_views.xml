<odoo>
  <data>

    <record id='flight_list' model='ir.ui.view'>
      <field name='name'>FlightList</field>
      <field name='model'>fms.flight</field>
      <field name='arch' type='xml'>
        <tree>
          <field name='name'/>
          <field name='planetype'/>
          <field name='eta'/>
          <field name='etd'/>
          <field name='route'/>
          <field name='remark'/>
        </tree>
      </field>
    </record>

    <record id='flight_form' model='ir.ui.view'>
      <field name='name'>Flight Form</field>
      <field name='model'>fms.flight</field>
      <field name='arch' type='xml'>
        <form>
          <header>
            <field name='state' widget="statusbar"/>
            <button type="object" name="create_schedule" string="Confirm"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name='name'/>
                    <field name='eta'/>
              </group>
              <group>
                    <field name='planetype'/>
                    <field name='etd'/>
                </group>
            </group>
            <group>
                <group>
                    <field name='route'/>
                    <field name='remark'/>
                    <field name='counter'/>
              </group>
            </group>
        </sheet>
        </form>
      </field>
    </record>


     
    <record id='Type_list' model='ir.ui.view'>
      <field name='name'>Type List</field>
      <field name='model'>fms.type</field>
      <field name='arch' type='xml'>
        <tree>
          <field name='name'/>
          <field name='typecalc'/>
        </tree>
      </field>
    </record>
    <record id='Type_form' model='ir.ui.view'>
      <field name='name'>Type Form</field>
      <field name='model'>fms.type</field>
      <field name='arch' type='xml'>
        <form>
          <sheet>
            <group>
              
              <field name='name'/>
                <field name='typecalc'/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

